<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip" >

        <com.app.choumei.hairstyle.common.MyImageView
            android:id="@+id/more_item_head"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/comment_list_profile" />

        <TextView
            android:id="@+id/more_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toLeftOf="@+id/comment_btn"
            android:layout_toRightOf="@+id/more_item_head"
            android:textColor="#ff576c94" />

        <TextView
            android:id="@+id/more_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_username"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_toRightOf="@+id/more_item_head"
            android:textColor="@color/zone_list_time"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/more_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_time"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/more_item_head"
            android:textColor="@color/zone_list_content" />

        <ImageView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15.0dip"
            android:contentDescription="@null"
            android:src="@drawable/scan_item_comment_img" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/scan_info_line" />

</LinearLayout>