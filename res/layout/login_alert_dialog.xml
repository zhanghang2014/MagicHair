<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_normal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="240.0dip"
        android:layout_height="50.0dip"
        android:gravity="center"
        android:text="登录之后才可以收藏到收藏夹哦"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="240.0dip"
        android:layout_height="1.0px"
        android:background="@drawable/poster_time_linesplit" />

    <LinearLayout
        android:layout_width="240.0dip"
        android:layout_height="50.0dip"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancle"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/poster_login_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff0000ff"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="1.0px"
            android:layout_height="50.0dip"
            android:background="@drawable/poster_time_linesplit" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/poster_login_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ff0000ff"
            android:textSize="16.0sp" />
    </LinearLayout>

</LinearLayout>