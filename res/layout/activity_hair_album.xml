<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_hairAlbum_Rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_hair_line"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42.0dip"
        android:background="@color/hair_date_line" />

    <com.lan.nicehair.widget.TopBarView
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.lan.nicehair.common.refresh_list.RefreshListView
        android:id="@+id/list_hair"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/transparent"
        android:dividerHeight="0.0dip"
        android:fadingEdge="none"
        android:listSelector="@color/transparent" />

    <RelativeLayout
        android:id="@+id/tips_Rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="记录自己的发型"
                android:textColor="#ff686868" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="记录自己美的瞬间"
                android:textColor="#ff686868" />

            <Button
                android:id="@+id/my_hairAlbum_recordBtn"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="18.0dip"
                android:background="@drawable/btn_bind_cancel"
                android:text="马上记录"
                android:textColor="@color/white"
                android:textSize="17.0sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>