<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="33.5dip"
        android:background="@drawable/topic_button_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/post_info_share_btn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21.0dip"
                android:layout_height="19.5dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zone_list_share"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/post_info_collect_btn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_zone_item_collection"
                android:layout_width="22.5dip"
                android:layout_height="19.5dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/collection_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zone_list_colletion"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/post_info_zan_btn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_zone_item_like"
                android:layout_width="19.5dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/like_icon" />

            <TextView
                android:id="@+id/tv_zone_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/post_info_comment_btn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_comment" />

            <TextView
                android:id="@+id/tv_zone_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>