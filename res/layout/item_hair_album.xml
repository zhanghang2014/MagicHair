<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingRight="7.5dip"
        android:paddingTop="8.0dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="4.0dip"
            android:paddingTop="4.0dip" >

            <TextView
                android:id="@+id/tv_hair_item_date"
                android:layout_width="33.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:textColor="@color/hair_date"
                android:textSize="11.0sp" />

            <ImageView
                android:id="@+id/iv_hair_item_date"
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="35.5dip"
                android:background="@drawable/hair_date_other_icon" />
        </RelativeLayout>

        <GridView
            android:id="@+id/grid_hair_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_set_up_input_box"
            android:cacheColorHint="@color/transparent"
            android:fadingEdge="none"
            android:horizontalSpacing="3.5dip"
            android:listSelector="@color/transparent"
            android:numColumns="2"
            android:padding="4.0dip"
            android:scrollbarStyle="outsideOverlay"
            android:verticalSpacing="4.0dip" />
    </LinearLayout>

</LinearLayout>