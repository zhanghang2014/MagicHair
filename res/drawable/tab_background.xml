<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item android:top="2.0dip" android:bottom="@dimen/tab_transparent_overlay_height">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/tab_transparent_dark" android:endColor="@color/tab_transparent_light" android:angle="90.0" />
        </shape>
    </item>
    <item android:top="1.0dip" android:bottom="@dimen/tab_line_bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_line" />
        </shape>
    </item>
</layer-list>
